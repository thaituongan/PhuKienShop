@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
﻿<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Shop Phụ Kiện Điện Thoại</title>
