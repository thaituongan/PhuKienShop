@{
    ViewData["Title"] = "Enter Verification Code";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card p-4 shadow-lg" style="border-radius: 15px; width: 100%; max-width: 400px;">
        <h2 class="text-center mb-4">@ViewData["Title"]</h2>

        <form asp-action="VerifyCode" method="post">
            <div class="mb-3">
                <label for="code" class="form-label">Verification Code:</label>
                <input type="text" id="code" name="code" class="form-control" placeholder="Enter your verification code" required />
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <p class="mb-0">@error.ErrorMessage</p>
                    }
                </div>
            }

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Verify</button>
            </div>
        </form>
    </div>
</div>
<style>
    .card {
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
    }

    h2 {
        color: #333;
        font-weight: 600;
    }

    .form-label {
        font-weight: 500;
    }

    .btn-primary {
        background-color: #0d6efd;
        border-color: #0d6efd;
        font-weight: 600;
    }

        .btn-primary:hover {
            background-color: #0b5ed7;
            border-color: #0a58ca;
        }
</style>