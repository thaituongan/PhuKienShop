@model PhuKienShop.Data.User

@{
    ViewData["Title"] = "Cập nhật tài khoản";
}

<h2 style="margin-left: 50px;">CẬP NHẬT TÀI KHOẢN</h2>

<form asp-action="UpdateAccount" method="post" style="margin-left: 50px;">
    <div class="form-group">
        <label asp-for="FullName">Họ và tên</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">Số điện thoại</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address">Địa chỉ</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <a href="@Url.Action("MyAccount", "Account")" class="btn btn-primary">Trở Lại</a>
    <button type="submit" class="btn btn-primary">Lưu</button>
</form>


