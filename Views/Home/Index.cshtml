@{
	<div class="section">
		<!-- container -->
		<div class="container">

			<!-- SECTION -->
			<div class="section">
				<!-- container -->
				<div class="container">
					<!-- row -->
					<div class="row">
						<!-- shop -->
						<div class="col-md-4 col-xs-6">
							<div class="shop">
								<div class="shop-img">
									<img src="./img/shop1.png" alt="">
								</div>
								<div class="shop-body">
									<h3>
										Adapter<br>
										Cáp Sạc<br>
									</h3>
									<a href="#" class="cta-btn">Khám Phá <i class="fa fa-arrow-circle-right"></i></a>
								</div>
							</div>
						</div>
						<!-- /shop -->
						<!-- shop -->
						<div class="col-md-4 col-xs-6">
							<div class="shop">
								<div class="shop-img">
									<img src="./img/shop3.png" alt="">
								</div>
								<div class="shop-body">
									<h3>Tai Nghe<br></h3>
									<a href="#" class="cta-btn">Khám Phá <i class="fa fa-arrow-circle-right"></i></a>
								</div>
							</div>
						</div>
						<!-- /shop -->
						<!-- shop -->
						<div class="col-md-4 col-xs-6">
							<div class="shop">
								<div class="shop-img">
									<img src="./img/shop2.png" alt="">
								</div>
								<div class="shop-body">
									<h3>Ốp Lưng<br></h3>
									<a href="#" class="cta-btn">Khám Phá <i class="fa fa-arrow-circle-right"></i></a>
								</div>
