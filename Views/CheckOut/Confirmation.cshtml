@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h2>Cảm ơn bạn đã đặt hàng!</h2>
                <p>Đơn hàng của bạn sẽ được gửi đến thành công.</p>
                <hr>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="order-details">
                    <h3>Order Details</h3>
                    <p><strong>Order ID:</strong> @Model.OrderId</p>
                    <p><strong>Order Date:</strong> @Model.OrderDate?.ToString()</p>
                    <p><strong>Total Amount:</strong> @Model.TotalAmount.ToString("C")</p>
                    <hr>
                    <h4>Products:</h4>
                    <ul>
                        @foreach (var item in Model.OrderDetails)
                        {
                            <li>@item.Product.Name - Quantity: @item.Quantity - Price: @item.TotalPrice.ToString("C")</li>
                        }
                    </ul>
                    <hr>
                    <h4>Thông tin khách hàng và địa chỉ nhận hàng: </h4>
                    <p>@Model.User.FullName</p>
                    <p>@Model.User.Address</p>
                    <p>@Model.User.PhoneNumber</p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 text-center">
                <a href="/" class="btn btn-primary">Tiếp tục mua sắm.</a>
            </div>
        </div>
    </div>
</div>

