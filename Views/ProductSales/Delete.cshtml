@model PhuKienShop.Data.ProductSale

@{
    ViewData["Title"] = "Xóa Khuyến Mãi";
}

<h2>@ViewData["Title"]</h2>

<div class="card mt-4">
    <div class="card-header bg-danger text-white">
        Xác nhận xóa
    </div>
    <div class="card-body">
        <h4>Bạn có chắc chắn muốn xóa khuyến mãi này?</h4>
        <dl class="row mt-3">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.OriginalPrice)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.OriginalPrice)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.DiscountPercentage)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.DiscountPercentage) %
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.StartDate)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.StartDate)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.EndDate)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.EndDate)
            </dd>

            <dt class="col-sm-4">
                Sản phẩm
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Product.ProductName)
            </dd>
        </dl>
    </div>
    <div class="card-footer">
        <form asp-action="Delete">
            <input type="hidden" asp-for="SaleId" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i> Xóa
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại danh sách
            </a>
        </form>
    </div>
</div>
