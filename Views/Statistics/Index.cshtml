@{
    ViewData["Title"] = "Thống kê";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- main content -->
<div class="container my-4">
    <div class="row text-center">
        <!-- Đơn hàng tháng này -->
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card bg-primary text-white shadow-sm">
                <div class="card-body">
                    <i class="fas fa-tasks fa-3x mb-3"></i>
                    <h3>@Model.TotalOrdersThisMonth</h3>
                    <p>Đơn hàng tháng này</p>
                </div>
            </div>
        </div>

        <!-- Khách mua hàng tháng này -->
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card bg-warning text-dark shadow-sm">
                <div class="card-body">
                    <i class="fas fa-user fa-3x mb-3"></i>
                    <h3>@Model.TotalCustomersThisMonth</h3>
                    <p>Khách mua hàng tháng này</p>
                </div>
            </div>
        </div>

        <!-- Sản phẩm bán tháng này -->
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card bg-success text-white shadow-sm">
                <div class="card-body">
                    <i class="fas fa-box fa-3x mb-3"></i>
                    <h3>@Model.TotalProductThisMonth</h3>
                    <p>Sản phẩm bán tháng này</p>
                </div>
            </div>
        </div>

        <!-- Doanh thu tháng này -->
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card bg-success text-white shadow-sm">
                <div class="card-body">
                    <i class="fas fa-dollar-sign fa-3x mb-3"></i>
                    <h3>@ViewData["FormattedTotalRevenueThisMonth"] VND</h3>
                    <p>Doanh thu tháng này</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Biến động so với tháng trước -->
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="my-0">Biến động</h4>
                </div>
                <div class="card-body">
                    <!-- Số đơn hàng -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5>Số đơn hàng tháng này</h5>
                            <p>@Model.TotalOrdersThisMonth</p>
                        </div>
                        <div class="col-md-6">
                            <h5>Số đơn hàng tháng trước</h5>
                            <p>@Model.TotalOrdersLastMonth</p>
                        </div>
                    </div>

                    <!-- Số khách mua hàng -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5>Số khách mua hàng tháng này</h5>
                            <p>@Model.TotalCustomersThisMonth</p>
                        </div>
                        <div class="col-md-6">
                            <h5>Số khách mua hàng tháng trước</h5>
                            <p>@Model.TotalCustomersLastMonth</p>
                        </div>
                    </div>

                    <!-- Doanh thu -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5>Doanh thu tháng này</h5>
                            <p>@Model.TotalRevenueThisMonth.ToString("N0") VND</p>
                        </div>
                        <div class="col-md-6">
                            <h5>Doanh thu tháng trước</h5>
                            <p>@Model.TotalRevenueLastMonth.ToString("N0") VND</p>
                        </div>
                    </div>

                    <!-- Lượng sản phẩm bán ra -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5>Lượng sản phẩm bán ra tháng này</h5>
                            <p>@Model.TotalProductThisMonth</p>
                        </div>
                        <div class="col-md-6">
                            <h5>Lượng sản phẩm bán ra tháng trước</h5>
                            <p>@Model.TotalProductLastMonth</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Tổng kết -->
    <div class="row text-center mt-4">
        <div class="col-md-3 mb-4">
            <div class="card bg-primary text-white shadow-sm">
                <div class="card-body">
                    <i class="fas fa-tasks fa-3x mb-3"></i>
                    <h3>@Model.TotalOrders</h3>
                    <p>Tổng số đơn hàng</p>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card bg-warning text-dark shadow-sm">
                <div class="card-body">
                    <i class="fas fa-user fa-3x mb-3"></i>
                    <h3>@Model.TotalCustomers</h3>
                    <p>Tổng khách mua hàng</p>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card bg-success text-white shadow-sm">
                <div class="card-body">
                    <i class="fas fa-box fa-3x mb-3"></i>
                    <h3>@Model.TotalProduct</h3>
                    <p>Tổng sản phẩm bán ra</p>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card bg-success text-white shadow-sm">
                <div class="card-body">
                    <i class="fas fa-dollar-sign fa-3x mb-3"></i>
                    <h3>@ViewData["FormattedTotalRevenue"] VND</h3>
                    <p>Tổng doanh thu</p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end main content -->
